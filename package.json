{
  "name": "jacek-kosciesza",
  "homepage": "https://jacekkosciesza.com",
  "version": "0.1.0",
  "description": "Jacek Kościesza's personal website",
  "author": "Jacek Kościesza <jacek.kosciesza@gmail.com>",
  "keywords": [
    "Jacek Kościesza",
    "personal",
    "website"
  ],
  "scripts": {
    "serve": "http-server ./build -p 80",
    "prebuild": "rimraf ./build && mkdir build",
    "build": "html-minifier --input-dir ./src --output-dir ./build --collapse-whitespace --remove-comments --file-ext html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JacekKosciesza/JacekKosciesza.git"
  },
  "bugs": {
    "url": "https://github.com/JacekKosciesza/JacekKosciesza/issues"
  },
  "devDependencies": {
    "html-minifier": "^3.2.3",
    "http-server": "^0.9.0",
    "rimraf": "^2.5.4"
  }
}
