{
  "name": "jacek-kosciesza",
  "version": "0.1.0",
  "description": "Jacek Kościesza Blog",
  "scripts": {
    "serve": "http-server ./src -p 1234",
    "clean": "rimraf ./build && mkdir build",
    "prebuild": "npm run clean",
    "build": "npm-run-all babel html copy images",
    "postbuild": "echo TODO: postbuild",
    "test": "echo TODO: test",
    "lint": "echo TODO: lint",
    "html": "html-minifier --input-dir ./src --output-dir ./build --collapse-whitespace --minify-css --remove-comments --file-ext html",
    "babel": "babel ./src -d ./build",
    "copy": "cp -R ./src/{*.ico,*.txt,*.webmanifest,styles} ./build",
    "images": "imagemin ./src/images/* --out-dir=./build/images && imagemin ./src/images/touch/* --out-dir=./build/images/touch",
    "external": "node external.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JacekKosciesza/JacekKosciesza.git"
  },
  "keywords": [
    "Jacek",
    "Kościesza",
    "blog",
    "web",
    "platform",
    "web",
    "components",
    "ES2015",
    "ES2016",
    "HTML5"
  ],
  "author": "Jacek Kościesza <jacek.kosciesza@gmail.com>",
  "bugs": {
    "url": "https://github.com/JacekKosciesza/JacekKosciesza/issues"
  },
  "homepage": "https://github.com/JacekKosciesza/JacekKosciesza#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "html-minifier": "^3.2.3",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^3.1.2"
  }
}
